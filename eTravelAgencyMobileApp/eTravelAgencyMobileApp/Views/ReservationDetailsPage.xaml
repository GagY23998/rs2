        <StackLayout>
            <FlexLayout AlignItems="Start"
                            Wrap="Wrap">
                <StackLayout x:Name="tOffer_Stack"
                             Orientation="Horizontal">
                    <Frame>
                        <Image HeightRequest="90"
                               WidthRequest="90"
                               Source="{Binding tOffer.ThumbnailImage,
                               Converter={StaticResource imgConverter}}"/>
                    </Frame>
                    <Frame HorizontalOptions="CenterAndExpand"
                           WidthRequest="210">
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Hotel Name:"/>
                                    <Span Text="{Binding Name}"/>
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="Start Date:"/>
                                    <Span Text="{Binding tOffer.StartDate,
                                          StringFormat='{0:dd.MM.yyy}'}" 
                                          FontAttributes="Bold" />
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="End Date: "/>
                                    <Span Text="{Binding tOffer.EndDate,
                                          StringFormat='{0:dd.MM.yyyy}'}"/>
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="Discount: "/>
                                    <Span Text="{Binding tOffer.Discount,
                                          StringFormat='{0:F0}'}"/>
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="Price:"/>
                                    <Span Text="{Binding tOffer.Price,
                                          StringFormat='{0:F2}'}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                </StackLayout>
                <StackLayout BindingContext="{Binding HotelOffer}"
                             Orientation="Horizontal"
                             VerticalOptions="CenterAndExpand"
                             >
                    <Frame>
                        <Image
                            HeightRequest="90"
                            WidthRequest="90"
                            Source="{Binding hOffer.ThumbnailImage,
                            Converter={StaticResource imgConverter}}"/>
                    </Frame>
                    <Frame WidthRequest="210">
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Hotel Name:"/>
                                    <Span Text="{Binding Name}"/>
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="Start Date:"/>
                                    <Span Text="{Binding hOffer.StartDate,
                                          StringFormat='{0:dd.MM.yyyy}'}" 
                                          FontAttributes="Bold" />
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="End Date: "/>
                                    <Span Text="{Binding hOffer.EndDate,
                                          StringFormat='{0:dd.MM.yyyy}'}"
                                          FontAttributes="Bold"/>
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="Discount: "/>
                                    <Span Text="{Binding hOffer.Discount,
                                          StringFormat='{0:F0}'}"/>
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="Price:"/>
                                    <Span Text="{Binding hOffer.PricePerPerson,
                                          StringFormat='{0:F2}'}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                </StackLayout>
            </FlexLayout>
            <StackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="Number of Persons:"/>
                <Entry Text="{Binding NumberOfPersons}" x:Name="numPersons_Label" Unfocused="NumberOfPersons_Changed"/>
                <Label Text="{Static system:Environment.NewLine}"/>
                <Label Text="Reservation Days:"/>
                <Entry Text="{Binding NumberOfDays}" x:Name="numDays_Label" Unfocused="NumberOfDays_Changed"/>
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Total Price:"/>
                            <Span x:Name="span_Price" Text="{Binding TotalPrice}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
